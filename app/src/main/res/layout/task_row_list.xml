<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="@color/colorTeal"
            android:textStyle="bold"
            tools:text="task name" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_name_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="5dp"
            android:hint="@string/hint_write_task">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_name_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTealField"
                android:hapticFeedbackEnabled="false"
                android:inputType="text"
                android:textColor="@color/colorTeal" />


        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/image_todo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="2dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_todo" />

        <ImageView
            android:id="@+id/image_doing"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="2dp"
            app:srcCompat="@drawable/ic_doing" />

        <ImageView
            android:id="@+id/image_done"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="2dp"
            app:srcCompat="@drawable/ic_done" />

        <TextView
            android:id="@+id/text_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorTeal"
            android:textStyle="bold"
            tools:text="state task" />


    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/image_btn_add_task"
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:layout_alignRight="@id/card_view"
        android:layout_alignParentBottom="true"
        android:background="@android:drawable/screen_background_light_transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add" />


</RelativeLayout>